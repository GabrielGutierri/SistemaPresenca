@model AulaViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Toast-->
<span id="AlertMessage" class="d-none">@TempData["AlertMessage"]</span>

<div aria-live="polite" aria-atomic="true" style="position: relative; ">
    <div class="toast container-personalizado" data-delay="4000">
        <div class="toast-header text-white">
            <strong class="mr-auto"> @TempData["AlertMessage"]</strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
</div>

<div div class="container mt-5  pt-5">
    <h2 class="mb-3">Cadastrar Aula</h2>
    <form class="form-group" method="post" action="/Aula/Save">
        <!--Código gerado automaticamente-->
        <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
        <input type="hidden" name="ID" value="@Model.ID" />
        <label for="Conteudo" class="mt-1">Conteúdo</label>
        <textarea name="Conteudo" value="@Model.Conteudo" class="form-control campo-personalizado">@Model.Conteudo</textarea>
        <span asp-validation-for="Conteudo" class="text-danger"></span>
        <br />
        <label for="DataHoraAula" class="mt-1">Data e Hora</label>
        <input asp-for="DataHoraAula" class="form-control campo-personalizado" />
        <span asp-validation-for="DataHoraAula" class="text-danger"></span>
        <br />
        <label for="CodMateria" class="mt-1">Código da Matéria</label>
        <select asp-for="CodMateria" asp-items="ViewBag.Materias" class="form-control campo-personalizado"></select>
        <span asp-validation-for="CodMateria" class="text-danger"></span>
        <br />

        <input type="submit" value="Cadastrar" class="btn btn-success botao-personalizado mt-1" />

    </form>
</div>

<!--Toast Javascript-->
@section Scripts
    {
    <script>
        $(document).ready(function () {

            var message = $('#AlertMessage').text();
            if (message !== '') {
                $('.toast').toast('show')
            }
        });
    </script>
}
